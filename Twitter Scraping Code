### Python script for Twitter scraping ###

import snscrape.modules.twitter as twitterScraper
import pandas as pd

query = "(E-mobility) OR (Emobility) OR (EV) OR (BEV) OR (PHEV) OR (Electric Vehicle) OR (Electric Vehicles) OR (Electric Car) OR (Electric Cars) lang:en since:2018-01-01 until:2022-12-31 -filter:links -filter:replies"
tweets = []
limit=100000000

for tweet in twitterScraper.TwitterSearchScraper(query).get_items():

    #print(vars(tweet))
    #break

    if len(tweets) == limit:
            break
    else:
        tweets.append([tweet.date, tweet.user.username, tweet.content])
    
df = pd.DataFrame(tweets,columns=['Date','User','Tweet'])
df.to_csv("Test.csv", index=False)
print(df)
